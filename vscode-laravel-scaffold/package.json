{
  "name": "laravel-scaffold",
  "displayName": "Laravel Scaffold Generator",
  "description": "Generate Laravel scaffolding with Model, Repository, Service, Controller, and Frontend files",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:php"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "laravelScaffold.generateModel",
        "title": "Laravel Scaffold: Generate Model"
      },
      {
        "command": "laravelScaffold.generateCRUD",
        "title": "Laravel Scaffold: Generate CRUD"
      },
      {
        "command": "laravelScaffold.initializeStubs",
        "title": "Laravel Scaffold: Initialize Stubs"
      },
      {
        "command": "laravelScaffold.initializeScaffold",
        "title": "Laravel Scaffold: Initialize Project Base Files"
      }
    ],
    "configuration": {
      "title": "Laravel Scaffold",
      "properties": {
        "laravelScaffold.templatePaths": {
          "type": "object",
          "default": {},
          "description": "Custom template paths for Laravel scaffold generation"
        },
        "laravelScaffold.enableAutoSync": {
          "type": "boolean",
          "default": true,
          "description": "Automatically sync Laravel stubs on startup"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "laravelScaffold.generateModel",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "laravelScaffold.generateCRUD",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "laravelScaffold.initializeStubs",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "laravelScaffold.initializeScaffold",
          "when": "workspaceFolderCount > 0"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
