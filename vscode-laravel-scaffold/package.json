{
  "name": "laravel-scaffold",
  "displayName": "Laravel Scaffold",
  "description": "Generate Laravel models, migrations, controllers, services, repositories, and more",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onCommand:laravelScaffold.generateModel",
    "onCommand:laravelScaffold.generateCRUD",
    "onCommand:laravelScaffold.initializeStubs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "laravelScaffold.generateModel",
        "title": "Laravel Scaffold: Generate Model"
      },
      {
        "command": "laravelScaffold.generateCRUD",
        "title": "Laravel Scaffold: Generate CRUD"
      },
      {
        "command": "laravelScaffold.initializeStubs",
        "title": "Laravel Scaffold: Initialize Project Stubs"
      }
    ],
    "configuration": {
      "title": "Laravel Scaffold",
      "properties": {
        "laravelScaffold.templatePaths": {
          "type": "object",
          "default": {},
          "description": "Custom template paths for each file type"
        },
        "laravelScaffold.defaultModelNamespace": {
          "type": "string",
          "default": "App\\Models",
          "description": "Default namespace for models"
        },
        "laravelScaffold.defaultControllerNamespace": {
          "type": "string",
          "default": "App\\Http\\Controllers",
          "description": "Default namespace for controllers"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/node": "^12.20.55",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "typescript": "^4.1.3"
  }
}
