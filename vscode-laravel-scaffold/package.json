{
  "name": "laravel-scaffold",
  "displayName": "Laravel Full-Stack Scaffolding",
  "description": "Generate Laravel models, services, repositories and TypeScript interfaces",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:laravelScaffold.generateModel",
    "onCommand:laravelScaffold.generateCRUD",
    "workspaceContains:artisan"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "laravelScaffold.generateModel",
        "title": "Laravel Scaffold: Generate Model & Related Files"
      },
      {
        "command": "laravelScaffold.generateCRUD",
        "title": "Laravel Scaffold: Generate Complete CRUD"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "laravelScaffold.generateModel",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "laravelScaffold.generateCRUD", 
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Laravel Scaffolding",
      "properties": {
        "laravelScaffold.templatePaths": {
          "type": "object",
          "default": {},
          "description": "Custom paths for Laravel scaffold templates",
          "properties": {
            "model": {
              "type": "string",
              "default": "",
              "description": "Path to custom model template"
            },
            "migration": {
              "type": "string",
              "default": "",
              "description": "Path to custom migration template"
            },
            "controller": {
              "type": "string",
              "default": "",
              "description": "Path to custom controller template"
            },
            "apiController": {
              "type": "string",
              "default": "",
              "description": "Path to custom API controller template"
            },
            "repository": {
              "type": "string",
              "default": "",
              "description": "Path to custom repository template"
            },
            "repositoryInterface": {
              "type": "string",
              "default": "",
              "description": "Path to custom repository interface template"
            },
            "service": {
              "type": "string",
              "default": "",
              "description": "Path to custom service template"
            },
            "serviceInterface": {
              "type": "string",
              "default": "",
              "description": "Path to custom service interface template"
            },
            "resource": {
              "type": "string",
              "default": "",
              "description": "Path to custom resource template"
            },
            "storeRequest": {
              "type": "string",
              "default": "",
              "description": "Path to custom store request template"
            },
            "updateRequest": {
              "type": "string",
              "default": "",
              "description": "Path to custom update request template"
            },
            "factory": {
              "type": "string",
              "default": "",
              "description": "Path to custom factory template"
            },
            "seeder": {
              "type": "string",
              "default": "",
              "description": "Path to custom seeder template"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "typescript": "^4.1.3"
  }
}
